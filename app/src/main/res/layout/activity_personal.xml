<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Personal">

    <TextView
        android:id="@+id/personal_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="@dimen/head"
        android:layout_width="match_parent"
        android:textAlignment="textStart"
        android:textSize="28dp"
        android:textColor="#000000"
        android:background="#dcdcdc"
        android:text="私人推荐"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:id="@+id/p_firstline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/personal_name"
        android:layout_height="150dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:weightSum="10"
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/p_book1"
                android:layout_weight="8"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:src="@drawable/book"/>
            <TextView
                android:id="@+id/p_book1_name"
                android:layout_height="30dp"
                android:layout_width="150dp"
                android:gravity="center"
                android:text="图书标题" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:weightSum="10"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/p_book2"
                android:layout_weight="8"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:src="@drawable/book"/>
            <TextView
                android:id="@+id/p_book2_name"
                android:layout_height="30dp"
                android:layout_width="150dp"
                android:gravity="center"
                android:text="图书标题" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/p_secondline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/p_firstline"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="150dp"
            android:weightSum="10"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/p_book3"
                android:layout_weight="8"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:src="@drawable/book"/>
            <TextView
                android:id="@+id/p_book3_name"
                android:layout_height="30dp"
                android:layout_width="150dp"
                android:gravity="center"
                android:text="图书标题" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:weightSum="10"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/p_book4"
                android:layout_weight="8"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:src="@drawable/book"/>
            <TextView
                android:id="@+id/p_book4_name"
                android:layout_height="30dp"
                android:layout_width="150dp"
                android:gravity="center"
                android:text="图书标题" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/p_secondline" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:weightSum="10"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/p_book5"
                android:layout_weight="8"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:src="@drawable/book"/>
            <TextView
                android:id="@+id/p_book5_name"
                android:layout_height="30dp"
                android:layout_width="150dp"
                android:gravity="center"
                android:text="图书标题" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:weightSum="10"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/p_book6"
                android:layout_weight="8"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:src="@drawable/book"/>
            <TextView
                android:id="@+id/p_book6_name"
                android:layout_height="30dp"
                android:layout_width="150dp"
                android:gravity="center"
                android:text="图书标题" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>